<!-- ============================================
     MAIN SECTION MARKUP
     ============================================ -->
<section class="{{ section_css_id }}" 
         id="{{ section_css_id }}"
         {% if section.settings.custom_css_class %}data-css-class="{{ section.settings.custom_css_class }}"{% endif %}
         data-section-id="{{ section_id }}"
         data-auto-slide="{{ auto_slide }}"
         data-slide-speed="{{ slide_speed }}">
  
  <div class="container">
    
    <!-- Section Header -->
    {% if section.settings.show_title or section.settings.show_description %}
      <div class="section-header">
        {% if section.settings.show_title and section.settings.title != blank %}
          <h2 class="section-title">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        
        {% if section.settings.show_description and section.settings.description != blank %}
          <div class="section-description">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}
    
    <!-- Product Carousel -->
    <div class="product-carousel" id="{{ carousel_id }}">
      <div class="product-grid" data-current-slide="0" data-total-slides="{{ total_slides }}">
        
        {% for product in products %}
          <div class="product-wrapper" data-product-id="{{ product.id }}">
            <div class="product-card" itemscope itemtype="http://schema.org/Product">
              
              <!-- Product Image -->
              <div class="product-image">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '600x600' }}" 
                       alt="{{ product.featured_image.alt | default: product.title | escape }}"
                       loading="lazy"
                       class="product-image-primary"
                       itemprop="image">
                  
                  {% if section.settings.show_second_image and product.images[1] %}
                    <img src="{{ product.images[1] | img_url: '600x600' }}" 
                         alt="{{ product.images[1].alt | default: product.title | escape }}"
                         loading="lazy"
                         class="product-image-secondary">
                  {% endif %}
                {% else %}
                  <div class="product-image-placeholder">
                    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                      <rect width="100" height="100" fill="#f5f5f5"/>
                      <text x="50" y="50" text-anchor="middle" dy="0.35em" fill="#999">No Image</text>
                    </svg>
                  </div>
                {% endif %}
                
                <!-- Product Badges -->
                {% if section.settings.show_badges %}
                  <div class="product-badges">
                    {% if product.compare_at_price > product.price %}
                      {% assign discount = product.compare_at_price | minus: product.price %}
                      {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price %}
                      <span class="product-badge badge-sale">
                        {% if section.settings.discount_format == 'percentage' %}
                          -{{ discount_percentage | round }}%
                        {% else %}
                          Save {{ discount | money }}
                        {% endif %}
                      </span>
                    {% endif %}
                    
                    {% if section.settings.show_new_badge %}
                      {% assign days_since_created = 'now' | date: '%s' | minus: product.created_at | date: '%s' | divided_by: 86400 %}
                      {% if days_since_created <= section.settings.new_badge_days %}
                        <span class="product-badge badge-new">{{ section.settings.new_badge_text | default: 'New' }}</span>
                      {% endif %}
                    {% endif %}
                    
                    {% unless product.available %}
                      <span class="product-badge badge-sold-out">{{ section.settings.sold_out_badge_text | default: 'Sold Out' }}</span>
                    {% endunless %}
                  </div>
                {% endif %}
                
                <!-- Quick Actions -->
                {% if enable_quick_view or enable_wishlist %}
                  <div class="quick-actions">
                    {% if enable_quick_view %}
                      <button type="button" 
                              class="quick-action-btn quick-view-btn" 
                              data-product-url="{{ product.url }}"
                              aria-label="Quick view {{ product.title }}">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      </button>
                    {% endif %}
                    
                    {% if enable_wishlist %}
                      <button type="button" 
                              class="quick-action-btn wishlist-btn" 
                              data-product-id="{{ product.id }}"
                              aria-label="Add {{ product.title }} to wishlist">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                      </button>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
              
              <!-- Product Info -->
              <div class="product-info">
                
                <!-- Product Vendor -->
                {% if section.settings.show_vendor and product.vendor != blank %}
                  <div class="product-vendor" itemprop="brand">{{ product.vendor }}</div>
                {% endif %}
                
                <!-- Product Title -->
                {% if section.settings.show_product_title %}
                  <h3 class="product-title" itemprop="name">
                    <a href="{{ product.url }}">{{ product.title | escape }}</a>
                  </h3>
                {% endif %}
                
                <!-- Product Description -->
                {% if section.settings.show_product_description and product.description != blank %}
                  <div class="product-description" itemprop="description">
                    {{ product.description | strip_html | truncatewords: section.settings.description_word_limit }}
                  </div>
                {% endif %}
                
                <!-- Product Rating -->
                {% if section.settings.show_rating %}
                  <div class="product-rating">
                    {% assign rating = product.metafields.reviews.rating.value | default: 4.5 %}
                    {% assign rating_count = product.metafields.reviews.rating_count.value | default: 0 %}
                    
                    <div class="rating-stars" role="img" aria-label="Rating: {{ rating }} out of 5 stars">
                      {% for i in (1..5) %}
                        <span class="rating-star{% if i <= rating %} filled{% endif %}">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                          </svg>
                        </span>
                      {% endfor %}
                    </div>
                    
                    {% if rating_count > 0 %}
                      <span class="rating-count">({{ rating_count }})</span>
                    {% endif %}
                  </div>
                {% endif %}
                
                <!-- Product Variants (Color Swatches) -->
                {% if section.settings.show_color_swatches and product.variants.size > 1 %}
                  <div class="product-variants">
                    {% assign color_option = product.options_with_values | where: 'name', 'Color' | first %}
                    {% if color_option %}
                      <div class="color-swatches">
                        {% for value in color_option.values limit: section.settings.max_swatches %}
                          {% assign variant = product.variants | where: 'option1', value | first %}
                          {% if variant %}
                            <button type="button" 
                                    class="color-swatch" 
                                    style="background-color: {{ value | handle | replace: '-', '' }};"
                                    data-variant-id="{{ variant.id }}"
                                    aria-label="Select {{ value }}">
                            </button>
                          {% endif %}
                        {% endfor %}
                        {% if color_option.values.size > section.settings.max_swatches %}
                          <span class="more-colors">+{{ color_option.values.size | minus: section.settings.max_swatches }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
                
                <!-- Product Price -->
                {% if section.settings.show_price %}
                  <div class="product-price" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                    <div class="price-container">
                      <span class="current-price" itemprop="price" content="{{ product.price | divided_by: 100.0 }}">
                        {{ product.price | money }}
                      </span>
                      
                      {% if product.compare_at_price > product.price %}
                        <span class="original-price">{{ product.compare_at_price | money }}</span>
                        
                        {% if section.settings.show_discount_percentage %}
                          {% assign discount = product.compare_at_price | minus: product.price %}
                          {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price %}
                          <span class="discount-percentage">-{{ discount_percentage | round }}%</span>
                        {% endif %}
                      {% endif %}
                      
                      <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
                      <meta itemprop="availability" content="{% if product.available %}InStock{% else %}OutOfStock{% endif %}">
                    </div>
                  </div>
                {% endif %}
                
                <!-- Add to Cart Button -->
                {% if section.settings.show_add_to_cart %}
                  <div class="add-to-cart-container">
                    {% if product.variants.size == 1 %}
                      <button type="button" 
                              class="add-to-cart-btn"
                              data-product-id="{{ product.id }}"
                              data-variant-id="{{ product.first_available_variant.id }}"
                              {% unless product.available %}disabled{% endunless %}>
                        {% if section.settings.show_cart_icon %}
                          <svg class="button-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5M7 13v6a1 1 0 001 1h8a1 1 0 001-1v-6M9 9h6m-6 0V7a3 3 0 116 0v2"/>
                          </svg>
                        {% endif %}
                        
                        <span class="button-text">
                          {% if product.available %}
                            {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
                          {% else %}
                            {{ section.settings.sold_out_text | default: 'Sold Out' }}
                          {% endif %}
                        </span>
                      </button>
                    {% else %}
                      <a href="{{ product.url }}" class="add-to-cart-btn">
                        {{ section.settings.select_options_text | default: 'Select Options' }}
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
                
              </div>
            </div>
          </div>
        {% endfor %}
        
      </div>
      
      <!-- Navigation -->
      {% if show_navigation %}
        <div class="carousel-navigation">
          <button type="button" 
                  class="nav-btn prev-btn" 
                  data-direction="prev"
                  aria-label="Previous products">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>
          
          <button type="button" 
                  class="nav-btn next-btn" 
                  data-direction="next"
                  aria-label="Next products">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      {% endif %}
      
      <!-- Pagination Dots -->
      {% if section.settings.show_pagination and total_slides > 1 %}
        <div class="carousel-pagination">
          {% for i in (1..total_slides) %}
            <button type="button" 
                    class="pagination-dot{% if forloop.first %} active{% endif %}" 
                    data-slide="{{ forloop.index0 }}"
                    aria-label="Go to slide {{ forloop.index }}">
            </button>
          {% endfor %}
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

<!-- ============================================
