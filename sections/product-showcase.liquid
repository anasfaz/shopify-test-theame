<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Color swatch selection
    const swatches = document.querySelectorAll('.Col-i9d');
    swatches.forEach(swatch => {
      swatch.addEventListener('click', function() {
        const radio = this.previousElementSibling;
        if (radio && radio.type === 'radio') {
          // Remove active class from all swatches in the same group
          const groupSwatches = document.querySelectorAll(`input[name="${radio.name}"] + .Col-i9d`);
          groupSwatches.forEach(s => s.classList.remove('is-active'));
          
          // Add active class to clicked swatch
          this.classList.add('is-active');
          radio.checked = true;
        }
      });
    });

    // Hover effects for product images
    const imageWrappers = document.querySelectorAll('.ProductItem__ImageWrapper--ets');
    imageWrappers.forEach(wrapper => {
      wrapper.addEventListener('mouseenter', function() {
        const images = this.querySelectorAll('.Pro-nrf');
        if (images.length > 1) {
          images[0].style.opacity = '0';
          images[1].style.opacity = '1';
        }
      });

      wrapper.addEventListener('mouseleave', function() {
        const images = this.querySelectorAll('.Pro-nrf');
        if (images.length > 1) {
          images[0].style.opacity = '1';
          images[1].style.opacity = '0';
        }
      });
    });

    // Tooltip functionality
    const tooltipElements = document.querySelectorAll('[data-tooltip]');
    tooltipElements.forEach(element => {
      element.addEventListener('mouseenter', function() {
        // Tooltip functionality can be enhanced here
      });
    });
  });
</script>

