<style>
  .best-sellers-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background: {{ section.settings.background_gradient | default: 'linear-gradient(180deg, #bfeefe, #d5bdff 50.5%, #d4beff)' }};
  }
  
  .best-sellers-container {
    max-width: {{ section.settings.container_width }}px;
    padding: 0 20px;
    margin: 0 auto;
  }
  
  .best-sellers-title {
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
    text-align: center;
  }
  
  .best-sellers-title h2 {
    margin: 0;
    font-size: {{ section.settings.title_font_size }}px;
    line-height: {{ section.settings.title_line_height }}px;
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_font_weight }};
    font-family: {{ section.settings.font_family }}, Helvetica, sans-serif;
  }
  
  .best-sellers-grid {
    margin: 0 -{{ section.settings.grid_gap }}px;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    justify-content: center;
  }
  
  .best-sellers-item {
    width: {{ 100 | divided_by: section.settings.items_per_row }}%;
    padding: 0 {{ section.settings.grid_gap }}px;
    display: flex;
    flex-flow: column;
    margin-bottom: {{ section.settings.item_margin_bottom }}px;
  }
  
  .product-card {
    background: {{ section.settings.card_background }};
    padding: {{ section.settings.card_padding }}px;
    display: flex;
    flex-flow: column;
    height: 100%;
    position: relative;
    border-radius: {{ section.settings.card_border_radius }}px;
    box-shadow: {{ section.settings.card_shadow }};
  }
  
  .product-image-wrapper {
    position: relative;
    overflow: hidden;
    padding-bottom: {{ section.settings.image_aspect_ratio }}%;
  }
  
  .product-image {
    margin: 0 auto;
    width: 100%;
    object-fit: contain;
    position: absolute;
    top: 0;
    height: 100%;
    object-position: center;
    display: block;
    max-width: 100%;
    border: none;
    outline: none;
  }
  
  .product-badge {
    height: {{ section.settings.badge_size }}px;
    width: {{ section.settings.badge_size }}px;
    position: absolute;
    top: 1rem;
    left: 1rem;
    max-width: {{ section.settings.badge_size }}px;
    max-height: {{ section.settings.badge_size }}px;
  }
  
  .product-content {
    margin: 22px 0 0;
    text-align: center;
    display: flex;
    flex-flow: column;
    width: 100%;
    flex-grow: 1;
  }
  
  .product-price {
    font-size: {{ section.settings.price_font_size }}px;
    line-height: {{ section.settings.price_line_height }}px;
    color: {{ section.settings.price_color }};
    font-weight: {{ section.settings.price_font_weight }};
    margin: 0;
  }
  
  .product-price del {
    color: {{ section.settings.compare_price_color }};
    margin-left: 10px;
  }
  
  .product-title {
    font-size: {{ section.settings.product_title_font_size }}px;
    line-height: {{ section.settings.product_title_line_height }}px;
    text-transform: uppercase;
    font-weight: {{ section.settings.product_title_font_weight }};
    margin: 9px 0;
    color: {{ section.settings.product_title_color }};
  }
  
  .product-reviews {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 15px;
  }
  
