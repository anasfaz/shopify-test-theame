<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.getElementById('{{ section_css_id }}');
  const carousel = section.querySelector('#{{ carousel_id }}');
  const grid = carousel.querySelector('.product-grid');
  const prevBtn = section.querySelector('.prev-btn');
  const nextBtn = section.querySelector('.next-btn');
  const paginationDots = section.querySelectorAll('.pagination-dot');
  
  // Carousel variables
  let currentSlide = 0;
  const totalSlides = {{ total_slides }};
  const productsPerView = {
    desktop: {{ products_per_row_desktop }},
    tablet: {{ products_per_row_tablet }},
    mobile: {{ products_per_row_mobile }}
  };
  
  // Auto-slide functionality
  {% if auto_slide %}
  let autoSlideInterval;
  
  function startAutoSlide() {
    autoSlideInterval = setInterval(() => {
      if (currentSlide < totalSlides - 1) {
        currentSlide++;
      } else {
        currentSlide = 0;
      }
      updateCarousel();
    }, {{ slide_speed }});
  }
  
  function stopAutoSlide() {
    clearInterval(autoSlideInterval);
  }
  
  // Start auto-slide
  startAutoSlide();
  
  // Pause on hover
  carousel.addEventListener('mouseenter', stopAutoSlide);
  carousel.addEventListener('mouseleave', startAutoSlide);
  {% endif %}
  
  // Get current products per view based on screen size
  function getCurrentProductsPerView() {
    if (window.innerWidth <= 767) {
      return productsPerView.mobile;
    } else if (window.innerWidth <= 1024) {
      return productsPerView.tablet;
    }
    return productsPerView.desktop;
  }
  
  // Update carousel position
  function updateCarousel() {
    const currentProductsPerView = getCurrentProductsPerView();
    const maxSlide = Math.max(0, Math.ceil({{ products.size }} / currentProductsPerView) - 1);
    
    // Adjust current slide if needed
    currentSlide = Math.min(currentSlide, maxSlide);
    
    const translateX = -(currentSlide * 100);
    grid.style.transform = `translateX(${translateX}%)`;
    
    // Update navigation buttons
    if (prevBtn && nextBtn) {
      prevBtn.disabled = currentSlide === 0;
      nextBtn.disabled = currentSlide >= maxSlide;
    }
    
    // Update pagination dots
    paginationDots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlide);
    });
    
    // Update grid data
    grid.dataset.currentSlide = currentSlide;
  }
  
  // Navigation event listeners
  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      if (currentSlide > 0) {
        currentSlide--;
        updateCarousel();
      }
    });
  }
  
  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      const currentProductsPerView = getCurrentProductsPerView();
      const maxSlide = Math.max(0, Math.ceil({{ products.size }} / currentProductsPerView) - 1);
      
      if (currentSlide < maxSlide) {
        currentSlide++;
        updateCarousel();
      }
    });
  }
  
  // Pagination dots event listeners
  paginationDots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentSlide = index;
      updateCarousel();
    });
  });
  
  // Touch/swipe support
  let startX = 0;
  let startY = 0;
  let isScrolling = false;
  
  carousel.addEventListener('touchstart', (e) => {
    startX = e.touches[0].clientX;
    startY = e.touches[0].clientY;
    isScrolling = false;
  });
  
  carousel.addEventListener('touchmove', (e) => {
    if (!startX || !startY) return;
    
    const currentX = e.touches[0].clientX;
    const currentY = e.touches[0].clientY;
    const diffX = startX - currentX;
    const diffY = startY - currentY;
    
    if (Math.abs(diffX) > Math.abs(diffY)) {
      isScrolling = true;
      e.preventDefault();
    }
  });
  
  carousel.addEventListener('touchend', (e) => {
    if (!isScrolling || !startX) return;
    
    const endX = e.changedTouches[0].clientX;
    const diffX = startX - endX;
    const threshold = 50;
    
    if (Math.abs(diffX) > threshold) {
      if (diffX > 0) {
        // Swipe left - next
        if (nextBtn && !nextBtn.disabled) {
          nextBtn.click();
        }
      } else {
        // Swipe right - prev
        if (prevBtn && !prevBtn.disabled) {
          prevBtn.click();
        }
      }
    }
    
    startX = 0;
    startY = 0;
    isScrolling = false;
  });
  
  // Keyboard navigation
  carousel.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft' && prevBtn && !prevBtn.disabled) {
      prevBtn.click();
    } else if (e.key === 'ArrowRight' && nextBtn && !nextBtn.disabled) {
      nextBtn.click();
    }
  });
  
  // Add to cart functionality
  section.querySelectorAll('.add-to-cart-btn').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      
      if (this.disabled || this.tagName === 'A') return;
      
      const productId = this.dataset.productId;
      const variantId = this.dataset.variantId;
      
      if (!variantId) return;
      
      // Add loading state
      const originalText = this.querySelector('.button-text').textContent;
      const buttonText = this.querySelector('.button-text');
      const buttonIcon = this.querySelector('.button-icon');
      
      this.classList.add('loading');
      this.disabled = true;
      buttonText.textContent = '{{ section.settings.adding_to_cart_text | default: "Adding..." }}';
      
      // Add loading spinner
      if (buttonIcon) {
        buttonIcon.innerHTML = '<div class="loading-spinner"></div>';
      }
      
      // Add to cart API call
      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify({
          id: variantId,
          quantity: 1
        })
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        return response.json();
      })
      .then(data => {
        // Success
        buttonText.textContent = '{{ section.settings.added_to_cart_text | default: "Added!" }}';
        
        // Trigger cart update event
        document.dispatchEvent(new CustomEvent('cart:updated', {
          detail: { item: data }
        }));
        
        // Reset button after delay
        setTimeout(() => {
          buttonText.textContent = originalText;
          this.classList.remove('loading');
          this.disabled = false;
          
          if (buttonIcon) {
            buttonIcon.innerHTML = `
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5M7 13v6a1 1 0 001 1h8a1 1 0 001-1v-6M9 9h6m-6 0V7a3 3 0 116 0v2"/>
              </svg>
            `;
          }
        }, 2000);
      })
      .catch(error => {
        console.error('Error adding to cart:', error);
        buttonText.textContent = '{{ section.settings.error_text | default: "Error" }}';
        
        setTimeout(() => {
          buttonText.textContent = originalText;
          this.classList.remove('loading');
          this.disabled = false;
          
          if (buttonIcon) {
            buttonIcon.innerHTML = `
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5M7 13v6a1 1 0 001 1h8a1 1 0 001-1v-6M9 9h6m-6 0V7a3 3 0 116 0v2"/>
              </svg>
            `;
          }
        }, 2000);
      });
    });
  });
  
  // Quick view functionality
  section.querySelectorAll('.quick-view-btn').forEach(button => {
    button.addEventListener('click', function() {
      const productUrl = this.dataset.productUrl;
      
      // Trigger quick view event
      document.dispatchEvent(new CustomEvent('quickview:open', {
        detail: { productUrl: productUrl }
      }));
    });
  });
  
  // Wishlist functionality
  section.querySelectorAll('.wishlist-btn').forEach(button => {
    button.addEventListener('click', function() {
      const productId = this.dataset.productId;
      
      // Toggle wishlist state
      this.classList.toggle('active');
      
      // Trigger wishlist event
      document.dispatchEvent(new CustomEvent('wishlist:toggle', {
        detail: { 
          productId: productId,
          isAdded: this.classList.contains('active')
        }
      }));
    });
  });
  
  // Color swatch functionality
  section.querySelectorAll('.color-swatch').forEach(swatch => {
    swatch.addEventListener('click', function() {
      const variantId = this.dataset.variantId;
      const productCard = this.closest('.product-card');
      const addToCartBtn = productCard.querySelector('.add-to-cart-btn');
      
      // Update active state
      this.parentElement.querySelectorAll('.color-swatch').forEach(s => s.classList.remove('active'));
      this.classList.add('active');
      
      // Update add to cart button
      if (addToCartBtn && variantId) {
        addToCartBtn.dataset.variantId = variantId;
      }
    });
  });
  
  // Resize handler
  let resizeTimeout;
  window.addEventListener('resize', () => {
