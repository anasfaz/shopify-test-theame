<section class="best-sellers-section">
  <div class="best-sellers-container">
    {% if section.settings.section_title != blank %}
      <div class="best-sellers-title">
        <h2>{{ section.settings.section_title }}</h2>
      </div>
    {% endif %}
    
    <div class="best-sellers-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            <div class="best-sellers-item" {{ block.shopify_attributes }}>
              <div class="product-card">
                {% if block.settings.product_image %}
                  <a href="{{ block.settings.product_url }}" class="product-image-wrapper">
                    <img src="{{ block.settings.product_image | img_url: '400x332' }}" 
                         alt="{{ block.settings.product_title }}" 
                         class="product-image"
                         loading="lazy">
                  </a>
                {% endif %}
                
                {% if block.settings.badge_image %}
                  <img src="{{ block.settings.badge_image | img_url: '100x100' }}" 
                       alt="Badge" 
                       class="product-badge">
                {% endif %}
                
                <div class="product-content">
                  <a href="{{ block.settings.product_url }}">
                    {% if block.settings.product_price %}
                      <h4 class="product-price">
                        {{ block.settings.product_price }}
                        {% if block.settings.compare_price %}
                          <span><del>{{ block.settings.compare_price }}</del></span>
                        {% endif %}
                      </h4>
                    {% endif %}
                    
                    {% if block.settings.product_title %}
                      <h3 class="product-title">{{ block.settings.product_title }}</h3>
                    {% endif %}
                    
                    {% if block.settings.show_reviews %}
                      <div class="product-reviews">
                        <div class="star-rating">
                          <span class="star-rating-bg"></span>
                          <span class="star-rating-fill" style="width: {{ block.settings.star_rating }}%"></span>
                        </div>
                        {% if block.settings.review_count %}
                          <div class="review-count">{{ block.settings.review_count }} Reviews</div>
                        {% endif %}
                      </div>
                    {% endif %}
                  </a>
                  
                  {% if block.settings.button_text %}
                    <a href="{{ block.settings.product_url }}" class="product-button">
                      <span>{{ block.settings.button_text }}</span>
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
            
          {% when 'custom_item' %}
            <div class="best-sellers-item" {{ block.shopify_attributes }}>
              <div class="product-card">
                {% if block.settings.custom_image %}
                  <div class="product-image-wrapper">
                    <img src="{{ block.settings.custom_image | img_url: '400x332' }}" 
                         alt="{{ block.settings.custom_title }}" 
                         class="product-image"
                         loading="lazy">
                  </div>
                {% endif %}
                
                <div class="product-content">
                  {% if block.settings.custom_price %}
                    <h4 class="product-price">{{ block.settings.custom_price }}</h4>
                  {% endif %}
                  
                  {% if block.settings.custom_title %}
                    <h3 class="product-title">{{ block.settings.custom_title }}</h3>
                  {% endif %}
                  
                  {% if block.settings.show_custom_reviews %}
                    <div class="product-reviews">
                      <div class="star-rating">
                        <span class="star-rating-bg"></span>
                        <span class="star-rating-fill" style="width: {{ block.settings.custom_star_rating }}%"></span>
                      </div>
                      {% if block.settings.custom_review_count %}
                        <div class="review-count">{{ block.settings.custom_review_count }} Reviews</div>
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  {% if block.settings.custom_button_text %}
                    <div class="product-button">
                      <span>{{ block.settings.custom_button_text }}</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    {% if section.settings.show_shop_all %}
      <div class="shop-all-button">
        <a href="{{ section.settings.shop_all_url }}">{{ section.settings.shop_all_text }}</a>
      </div>
    {% endif %}
  </div>
</section>

