{% schema %}
{
  "name": "Sliders Showcase",
  "settings": [],
  "presets": [
    {
      "name": "Sliders Showcase"
    }
  ]
}
{% endschema %}

<div class="wrapper-isq">
  <div class="wrapper-bg"></div>
  <div>
    {% if collections['sliders'] and collections['sliders'].products_count > 0 %}
      {% assign sliders = collections['sliders'].products %}
      {% for product in sliders limit: 12 %}
        <div class="wrapper-o41" onclick="this.querySelector('.content-kz2').classList.toggle('show')">
          <a href="{{ product.url }}">
            <div class="image-container">
  <img src="{% if product.featured_image %}{{ product.featured_image | img_url: '400x' }}{% else %}https://via.placeholder.com/200x180?text=No+Image{% endif %}" class="image-kfn">
</div>
            <div class="content-kz2">
              <p class="slide-j99">Sliders / <span class="slide-zfj">{{ product.title }}</span></p>
              <p class="slide-j5o">{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {% endfor %}
    {% else %}
      <p>No products found in the 'sliders' collection.</p>
    {% endif %}
  </div>
  <div class="slide-j3o">
    <div>
      <div class="content-5ho">
        <h2>This here is it. Just slide in.</h2>
        <p>Cloud-like comfort & solid support in Ludic proprietary CloudFrame<sup>â„¢</sup></p>
        <a href="/collections/sliders" class="button-9vj">Discover</a>
      </div>
    </div>
  </div>
</div>

<style>
/* Include all your CSS here or move it to a CSS asset */
.wrapper-isq { position: relative; width: 100%; height: 500px; overflow: hidden; margin: 0; }
.wrapper-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: url(https://cdn.shopify.com/s/files/1/0823/6787/3328/files/Ludic_Grid_1.svg?v=1744975392) no-repeat center center; z-index: 0; pointer-events: none; }
.slide-j3o { text-align: center; position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); width: 100%; margin-bottom: 75px; z-index: 1; }
.wrapper-o41 { width: 200px; height: 200px; margin-top: 50px; position: relative; z-index: 1; cursor: pointer; }
.image-container { position: relative; width: 100%; height: 100%; }
.image-kfn { width: 200px !important; height: 180px; object-fit: contain; pointer-events: none; will-change: transform; transition: transform 0.1s; position: relative; }
.content-kz2 { position: absolute; bottom: -20px; text-align: center; width: 100%; display: none; }
.content-kz2.show { display: block; animation: slideUp 0.3s ease-out forwards; }
.slide-j99, .slide-j5o { font-size: 12px; color: #1a1a1a; line-height: 12px; font-weight: 400; margin: 0 0 7px 0; }
.slide-zfj { font-weight: 700; }
.content-5ho h2 { font-size: 24px; font-weight: 700; line-height: 29px; margin-bottom: 6px; display: inline-block; }
.content-5ho p { font-size: 16px; line-height: 29px; font-weight: 400; margin-bottom: 24px; }
a.button-9vj { font-size: 9px; line-height: 12px; background: #E60013; font-weight: 700; color: #fff; text-decoration: none; padding: 13px 40px; display: inline-block; border-radius: 3px; }
@media screen and (max-width: 767px){
  .wrapper-isq { height: 260px; padding: 20px; }
  .wrapper-bg { background: url(https://cdn.shopify.com/s/files/1/0823/6787/3328/files/grid_mobile.svg?v=1745214208) center center; }
  .wrapper-o41 { width: 100px; height: 100px; }
  .image-kfn { width: 100px !important; height: 100px; }
  .content-5ho h2 { font-size: 10px; line-height: 12px; }
  .content-5ho p { font-size: 8px; line-height: 11px; margin-bottom: 15px; }
  a.button-9vj { font-size: 8px; line-height: 11px; padding: 6px 13px; }
  .slide-j99, .slide-j5o { font-size: 8px; line-height: 11px; margin-bottom: 3px; }
}
</style>
