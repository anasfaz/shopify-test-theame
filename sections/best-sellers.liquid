    .{{ section_css_id }} {
      padding: {{ section.settings.padding_top | times: 0.6 }}px 0 {{ section.settings.padding_bottom | times: 0.6 }}px;
    }
    
    .{{ section_css_id }} .container {
      padding: 0 {{ section.settings.container_padding | times: 0.6 }}px;
    }
    
