{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

<section id="sho-mwk" class="slide-xrp section-oo3" 
         style="--section-text-color: {{ section.settings.text_color }}; 
                --section-button-bg: {{ section.settings.button_background }}; 
                --section-button-text: {{ section.settings.button_text_color }};">
  <style>
    #sho-mwk {
      --color-foreground: {{ section.settings.text_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-button: {{ section.settings.button_background | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-button-text: {{ section.settings.button_text_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --font-heading: "Helvetica Neue", Arial, sans-serif;
      --font-subheading: "Helvetica Neue", Arial, sans-serif;
    }
    #sho-mwk .slide-9pj { font-family: var(--font-heading); }
    #sho-mwk .cvnov { font-family: var(--font-subheading); }
  </style>
  <div class="container-89l">
    <div>
      <div class="swi-ax6 swiper-kpc fa-aoc" id="banner-swiper-{{ section.id }}">
        <div class="wrapper-roo swiper-wrapper">
          {% for block in section.blocks %}
            <div class="slide-qzc slide-3bb col-mws banner-w1y ani-9e7 swiper-slide" 
                 style="--padding-bottom: {{ section.settings.desktop_height }}%; --padding-bottom-mobile: {{ section.settings.mobile_height }}%; transition-delay: {{ forloop.index0 | times: 100 }}ms; margin-right: 8px;"
                 {{ block.shopify_attributes }}>
              
              {% if block.settings.slide_url != blank %}
                <a href="{{ block.settings.slide_url }}" class="slide-8vt"></a>
              {% endif %}
              
              <div class="wrapper-d3v" style="--overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }}; --overlay-opacity-mobile: {{ block.settings.overlay_opacity_mobile | divided_by: 100.0 }};">
                {% if block.settings.image != blank %}
                  <picture>
                    {% if block.settings.mobile_image != blank %}
                      <source media="(max-width: 749px)" 
                              srcset="{{ block.settings.mobile_image | image_url: width: 750 }} 750w,
                                      {{ block.settings.mobile_image | image_url: width: 1500 }} 1500w"
                              sizes="100vw">
                    {% endif %}
                    
                    {% assign desktop_image = block.settings.image %}
                    <source media="(min-width: 750px)" 
                            srcset="{{ desktop_image | image_url: width: 1500 }} 1500w,
                                    {{ desktop_image | image_url: width: 2000 }} 2000w,
                                    {{ desktop_image | image_url: width: 3000 }} 3000w,
                                    {{ desktop_image | image_url: width: 3680 }} 3680w,
                                    {{ desktop_image | image_url: width: 5520 }} 5520w"
                            sizes="100vw">
                    
                    <img src="{{ desktop_image | image_url: width: 1500 }}" 
                         class="slide-rcf" 
                         style="--focal_point_desktop: {{ block.settings.focal_point_desktop }}; --focal_point_mobile: {{ block.settings.focal_point_mobile }};" 
                         width="{{ desktop_image.width }}" 
                         height="{{ desktop_image.height }}"
                         alt="{{ block.settings.image.alt | default: block.settings.heading | escape }}"
                         loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                         decoding="async">
                  </picture>
                {% else %}
                  {% comment %} Placeholder for admin {% endcomment %}
                  <div class="slide-placeholder">
                    <svg width="80" height="60" viewBox="0 0 80 60" fill="none">
                      <rect width="80" height="60" fill="#f0f0f0" stroke="#ddd" stroke-width="1"/>
                      <circle cx="25" cy="20" r="3" fill="#ccc"/>
                      <path d="M10 45L25 30L35 40L50 25L70 45V50H10V45Z" fill="#ddd"/>
                    </svg>
                    <span>Add Image</span>
                  </div>
                {% endif %}
              </div>
              
              <div class="content-7so content-tp4 content-zt2 pagination-yc2">
                {% if block.settings.subheading != blank %}
                  <div class="slide-11p cvnov">{{ block.settings.subheading }}</div>
                {% endif %}
                {% if block.settings.heading != blank %}
                  <h2 class="slide-9pj cus-5d8 accent-66j" style="--font-size: {{ block.settings.heading_size }}px;">
                    {{ block.settings.heading }}
                  </h2>
                {% endif %}
                {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                  <a href="{{ block.settings.button_url }}" class="slide-button">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
        
        {% if section.settings.show_navigation and section.blocks.size > 1 %}
          <div class="slide-235 container-ywn">
            <button class="button-feo button-hb6 col-mws swiper-button-prev" type="button" aria-label="Previous slide">
              <svg class="icon icon-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.6333 12.5L8 6.86673L8.86673 6L15.3667 12.5L8.86673 19L8 18.1333L13.6333 12.5Z" fill="currentColor" stroke="currentColor" stroke-width="0.3"></path>
              </svg>
            </button>
            <button class="button-feo button-gbs col-mws swiper-button-next" type="button" aria-label="Next slide">
              <svg class="icon icon-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.6333 12.5L8 6.86673L8.86673 6L15.3667 12.5L8.86673 19L8 18.1333L13.6333 12.5Z" fill="currentColor" stroke="currentColor" stroke-width="0.3"></path>
              </svg>
            </button>
          </div>
        {% endif %}
        
        {% if section.settings.show_pagination and section.blocks.size > 1 %}
          <div class="pagination-wia pagination-shd pagination-yrs pagination-aio pagination-fpk pagination-kto col-mws swiper-pagination"></div>
        {% endif %}
        
        <span class="swiper-icr"></span>
      </div>
    </div>
  </div>
</section>

{% if section.blocks.size > 0 %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperEl = document.querySelector('#banner-swiper-{{ section.id }}');
    if (!swiperEl) return;

    const swiper = new Swiper('#banner-swiper-{{ section.id }}', {
      // Core settings
      loop: {{ section.settings.enable_loop }},
      speed: {{ section.settings.transition_speed }},
      effect: 'slide',
      grabCursor: true,
      watchSlidesProgress: true,
      
      // Autoplay
      {% if section.settings.enable_autoplay %}
      autoplay: {
        delay: {{ section.settings.autoplay_delay | times: 1000 }},
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      },
      {% endif %}
      
      // Navigation
      {% if section.settings.show_navigation %}
      navigation: {
        nextEl: '#banner-swiper-{{ section.id }} .swiper-button-next',
        prevEl: '#banner-swiper-{{ section.id }} .swiper-button-prev',
      },
      {% endif %}
      
      // Pagination
      {% if section.settings.show_pagination %}
      pagination: {
        el: '#banner-swiper-{{ section.id }} .swiper-pagination',
        clickable: true,
        type: 'bullets',
      },
      {% endif %}
      
      // Accessibility
      a11y: {
        prevSlideMessage: 'Previous slide',
        nextSlideMessage: 'Next slide',
        firstSlideMessage: 'This is the first slide',
        lastSlideMessage: 'This is the last slide',
      },
      
      // Performance optimizations
      preloadImages: false,
      lazy: {
        loadPrevNext: true,
      },
      
      // Events for animation
      on: {
        init: function() {
          this.slides.forEach((slide, index) => {
            if (index === this.activeIndex) {
              slide.classList.add('ani-9e7');
            }
          });
        },
        slideChange: function() {
          this.slides.forEach(slide => slide.classList.remove('ani-9e7'));
          if (this.slides[this.activeIndex]) {
            this.slides[this.activeIndex].classList.add('ani-9e7');
          }
        }
      }
    });
  });
</script>
{% endif %}

