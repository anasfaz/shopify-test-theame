                      <span class="Ima-xq7"></span>
                    </div>
                  </a>
                {% else %}
                  <a href="#" class="Pro-61m ProductItem__ImageWrapper--ets">
                    <div class="Asp-j3t AspectRatio--pmo" style="max-width: 720px; --aspect-ratio: 1.0">
                      {{ 'product-1' | placeholder_svg_tag: 'Pro-nrf fa-249 Image--yxd' }}
