<style>
  .pain-relief-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .pain-relief-section.gradient-bg {
    background: linear-gradient(287.79deg, {{ section.settings.gradient_start }} 4.15%, {{ section.settings.gradient_end }} 97.67%);
  }

  .pain-relief-container {
    max-width: {{ section.settings.container_max_width }}px;
    padding-inline: {{ section.settings.container_padding }}px;
    width: 100%;
    margin-inline-start: auto;
    margin-inline-end: auto;
  }

  @media (max-width: 1599px) {
    .pain-relief-container {
      max-width: 1392px;
    }
  }

  .pain-relief-wrapper {
    display: flex;
    gap: {{ section.settings.content_gap }}px;
    align-items: center;
    {% if section.settings.enable_gradient %}
    background: linear-gradient(287.79deg, {{ section.settings.gradient_start }} 4.15%, {{ section.settings.gradient_end }} 97.67%);
    padding: 0;
    border-radius: {{ section.settings.border_radius }}px;
    {% endif %}
  }

  .pain-relief-content {
    width: calc({{ section.settings.content_width }}% - {{ section.settings.content_gap | divided_by: 2 }}px);
    {% if section.settings.enable_gradient %}
    padding: {{ section.settings.content_padding_y }}px 0 {{ section.settings.content_padding_y }}px {{ section.settings.content_padding_x }}px;
    {% endif %}
  }

  .pain-relief-image {
    width: calc({{ 100 | minus: section.settings.content_width }}% - {{ section.settings.content_gap | divided_by: 2 }}px);
    position: relative;
    align-self: flex-end;
  }

  .pain-relief-title {
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    font-weight: 700;
    font-family: {{ section.settings.heading_font }}, sans-serif;
    font-size: {{ section.settings.title_font_size }}px;
    line-height: {{ section.settings.title_line_height }}px;
    color: {{ section.settings.title_color }};
    {% if section.settings.title_capitalize %}
    text-transform: capitalize;
    {% endif %}
  }

  .pain-relief-features {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.features_gap_y }}px {{ section.settings.features_gap_x }}px;
    margin: {{ section.settings.features_margin }}px 0;
  }

  .pain-relief-feature {
    display: flex;
    align-items: center;
    gap: {{ section.settings.feature_icon_gap }}px;
    padding: {{ section.settings.feature_padding }}px 0;
    border-bottom: 1px solid {{ section.settings.feature_border_color }};
    max-width: calc(50% - {{ section.settings.features_gap_x | divided_by: 2 }}px);
    margin: 0;
    width: calc(50% - {{ section.settings.features_gap_x | divided_by: 2 }}px);
    pointer-events: none;
  }

  .pain-relief-feature:last-of-type {
    padding-bottom: 0;
  }

  .pain-relief-feature img {
    width: {{ section.settings.feature_icon_size }}px;
    min-width: {{ section.settings.feature_icon_size }}px;
    align-self: flex-start;
  }

  .pain-relief-feature-text {
    flex: 1;
    font-weight: 600;
    font-family: {{ section.settings.text_font }}, sans-serif;
    font-size: {{ section.settings.feature_font_size }}px;
    line-height: {{ section.settings.feature_line_height }}px;
    color: {{ section.settings.feature_text_color }};
    margin: 0;
  }

  .pain-relief-button {
    appearance: none;
    line-height: {{ section.settings.button_height }}px;
    text-align: center;
    border-radius: {{ section.settings.button_border_radius }}px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 0 {{ section.settings.button_padding }}px;
    text-decoration: none;
    display: inline-block;
    position: relative;
    max-width: {{ section.settings.button_max_width }}px;
    width: 100%;
    margin-inline: auto;
    font-size: {{ section.settings.button_font_size }}px;
    font-family: {{ section.settings.heading_font }}, sans-serif;
    font-weight: 700;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    transition: all 0.3s ease;
    {% if section.settings.button_capitalize %}
    text-transform: capitalize;
    {% endif %}
  }

  .pain-relief-button:hover {
    background: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .pain-relief-image img {
    border-radius: {{ section.settings.image_border_radius }}px;
    height: 100%;
    width: 100%;
    min-height: {{ section.settings.image_min_height }}px;
    object-fit: cover;
  }

  {% if section.settings.enable_gradient %}
  .pain-relief-content * {
    color: {{ section.settings.gradient_text_color }};
  }
  {% endif %}

  /* Mobile Styles */
  @media (max-width: 991px) {
    .pain-relief-section {
      padding: {{ section.settings.mobile_section_padding_top }}px 0 {{ section.settings.mobile_section_padding_bottom }}px;
    }

    .pain-relief-wrapper {
      flex-direction: column-reverse;
      {% if section.settings.enable_gradient %}
      flex-direction: column;
      gap: {{ section.settings.mobile_content_gap }}px;
      {% endif %}
    }

    .pain-relief-content,
    .pain-relief-image {
      width: 100%;
    }

    {% if section.settings.enable_gradient %}
    .pain-relief-content {
      padding: {{ section.settings.mobile_content_padding }}px {{ section.settings.mobile_content_padding_x }}px 0 {{ section.settings.mobile_content_padding_x }}px;
    }
    {% endif %}

    .pain-relief-title {
      margin-bottom: {{ section.settings.mobile_title_margin }}px;
      font-size: {{ section.settings.mobile_title_font_size }}px;
      line-height: {{ section.settings.mobile_title_line_height }}px;
      {% if section.settings.enable_gradient %}
      text-align: center;
      {% endif %}
    }

    .pain-relief-features {
      gap: {{ section.settings.mobile_features_gap }}px {{ section.settings.features_gap_x }}px;
      margin: {{ section.settings.mobile_features_margin }}px 0;
    }

    .pain-relief-feature {
      gap: {{ section.settings.mobile_feature_gap }}px;
      padding: {{ section.settings.mobile_feature_padding }}px 0;
      max-width: 100%;
      width: 100%;
    }

    .pain-relief-image img {
      aspect-ratio: 1 / 0.92;
    }

    .pain-relief-button {
      max-width: 100%;
      display: block;
    }
  }

  @media (max-width: 740px) {
    .pain-relief-title {
      font-size: {{ section.settings.mobile_title_font_size | minus: 8 }}px;
      line-height: {{ section.settings.mobile_title_line_height | minus: 10 }}px;
    }

    .pain-relief-feature-text {
      font-size: {{ section.settings.mobile_feature_font_size }}px;
      line-height: {{ section.settings.mobile_feature_line_height }}px;
    }
  }

  @media (max-width: 576px) {
    .pain-relief-image img {
      min-height: {{ section.settings.mobile_image_min_height }}px;
      height: {{ section.settings.mobile_image_min_height }}px;
      object-position: {{ section.settings.mobile_image_position }};
    }
  }

  @media (min-width: 1200px) {
    .pain-relief-content {
      width: calc({{ section.settings.desktop_content_width }}% - {{ section.settings.content_gap | divided_by: 2 }}px);
      {% if section.settings.enable_gradient %}
      padding: {{ section.settings.desktop_content_padding_y }}px 0 {{ section.settings.desktop_content_padding_y }}px {{ section.settings.desktop_content_padding_x }}px;
      {% endif %}
    }

    .pain-relief-image {
      margin-top: {{ section.settings.desktop_image_margin_top }}px;
    }
  }
</style>

<div class="pain-relief-section {{ section.settings.css_class }}">
  <div class="pain-relief-container">
    <div class="pain-relief-wrapper">
      <div class="pain-relief-content">
        {% if section.settings.title != blank %}
          <h2 class="pain-relief-title">{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
          <p class="pain-relief-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}

        {% if section.blocks.size > 0 %}
          <div class="pain-relief-features">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'feature' %}
                  <div class="pain-relief-feature" {{ block.shopify_attributes }}>
                    {% if block.settings.icon != blank %}
                      <img src="{{ block.settings.icon | img_url: '32x32' }}" 
                           alt="{{ block.settings.title }}"
                           height="{{ section.settings.feature_icon_size }}" 
                           width="{{ section.settings.feature_icon_size }}">
                    {% endif %}
                    <div class="pain-relief-feature-content">
                      {% if block.settings.title != blank %}
                        <p class="pain-relief-feature-text">{{ block.settings.title }}</p>
                      {% endif %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <div class="pain-relief-button-wrapper">
            <a href="{{ section.settings.button_url }}" class="pain-relief-button">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>

      <div class="pain-relief-image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: '800x600' }}" 
               alt="{{ section.settings.image.alt | default: section.settings.title }}">
        {% else %}
          <div style="background: #f0f0f0; min-height: {{ section.settings.image_min_height }}px; border-radius: {{ section.settings.image_border_radius }}px; display: flex; align-items: center; justify-content: center; color: #666;">
            Image placeholder
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

